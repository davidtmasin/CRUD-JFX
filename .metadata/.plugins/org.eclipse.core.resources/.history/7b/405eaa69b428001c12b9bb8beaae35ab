package IntefaceFuncaoAltaOrdem;

//Este exemplo, só funciona para uma interface que possui apenas 01 método

public class FuncoesAltaOrdem {

	public static void main(String[] args) {
		
		Operacao soma = (int a, int b) -> a+b;
		Operacao subtracao = (int a, int b) -> a-b;
		Operacao divisao = (int a, int b) -> a/b;
		Operacao multiplicacao = (int a, int b) -> a*b;
		
		System.out.println("O resultado da soma" + calcular(soma, 20, 9));
		System.out.println("O resultado da subtração" + calcular(subtracao, 20, 9));
		System.out.println("O resultado da divisão" + calcular(divisao, 20, 9));
		System.out.println("O resultado da multiplicação" + calcular(multiplicacao, 20, 9));
	}
	
	public static double calcular(Operacao op, int a, int b) {
		return op.executar(a, b);
	}
}

interface Operacao{
	public double executar(int a, int b);
}
