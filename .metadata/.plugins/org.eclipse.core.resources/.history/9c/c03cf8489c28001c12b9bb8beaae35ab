package aula4.explicacao;

import java.util.Scanner;

public class EstruturaDeDecisaoII {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		
		System.out.println("O que você deseja comer?");
		int opcao = scan.nextInt();
		
		switch(opcao) {
			case 1: System.out.println("Você escolheu sushi.");
			break;
			
			case 2: System.out.println("Você escolheu lasanha");
			break;
			
			case 3: System.out.println("Você escolheu camarão");
			break;
			
			case 4: System.out.println("Você escolheu pizza");
			break;
			
			default: System.out.println("Você escolheu todas as anteriores");
		}
			

	}

}
